{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/d", "/c"]
            }
        }
    },
    "tasks": [
        {
            "label": "Clone Pi-hole repositories (release)",
            "type": "shell",
            "command": "bash scripts/dev.sh master",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clone Pi-hole repositories (development)",
            "type": "shell",
            "command": "bash scripts/dev.sh dev",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Save dev/core patch to dev/patch.patch",
            "type": "shell",
            "command": "git -C dev/core diff --cached --abbrev=8 > dev/patch.patch && code dev/patch.patch",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Save dev/web patch to dev/patch.patch",
            "type": "shell",
            "command": "git -C dev/web diff --cached --abbrev=8 > dev/patch.patch && code dev/patch.patch",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Save dev/FTL patch to dev/patch.patch",
            "type": "shell",
            "command": "git -C dev/FTL diff --cached --abbrev=8 > dev/patch.patch && code dev/patch.patch",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Save dev/PADD patch to dev/patch.patch",
            "type": "shell",
            "command": "git -C dev/PADD diff --cached --abbrev=8 > dev/patch.patch && code dev/patch.patch",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Patch dev/core",
            "type": "shell",
            "command": "bash scripts/patch.sh core dev/core",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Patch dev/web",
            "type": "shell",
            "command": "bash scripts/patch.sh web dev/web",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Patch dev/FTL",
            "type": "shell",
            "command": "bash scripts/patch.sh ftl dev/FTL",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Patch all repositories",
            "dependsOn": [
                "Patch dev/core",
                "Patch dev/web",
                "Patch dev/FTL"
            ]
        },
        {
            "label": "Reset dev/core",
            "type": "shell",
            "command": "git -C dev/core reset --hard && git -C dev/core clean -fd",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Reset dev/web",
            "type": "shell",
            "command": "git -C dev/web reset --hard && git -C dev/web clean -fd",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Reset dev/FTL",
            "type": "shell",
            "command": "git -C dev/FTL reset --hard && git -C dev/FTL clean -fd",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Reset all repositories",
            "dependsOn": [
                "Reset dev/core",
                "Reset dev/web",
                "Reset dev/FTL"
            ]
        },
        {
            "label": "Test dev/core",
            "type": "shell",
            "command": "bash scripts/patch.sh core dev/core no-patches",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Test dev/web",
            "type": "shell",
            "command": "bash scripts/patch.sh web dev/web no-patches",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Test dev/FTL",
            "type": "shell",
            "command": "bash scripts/patch.sh ftl dev/FTL no-patches",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Test all repositories",
            "dependsOn": [
                "Test dev/core",
                "Test dev/web",
                "Test dev/FTL"
            ]
        },
    ]
}
